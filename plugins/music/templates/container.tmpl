<?xml version="1.0" encoding="ISO-8859-1" ?>
<TiVoContainer>
    <ItemStart>$start</ItemStart>
    <ItemCount>#echo len($files) #</ItemCount>
    <Details>
        <Title>$escape($name)</Title>
        <ContentType>x-container/folder</ContentType>
        <SourceFormat>x-container/folder</SourceFormat>
        <TotalItems>$total</TotalItems>
    </Details>
    #for $file in $files
    #if $isdir($file)
    <Item>
        <Details>
            <Title>$escape($file)</Title>
            <ContentType>x-container/folder</ContentType>
            <SourceFormat>x-container/folder</SourceFormat>
        </Details>
        <Links>
            <Content>
                    <Url>/TiVoConnect?Command=QueryContainer&amp;Container=$quote($name)/$quote($file)</Url>
                    <ContentType>x-tivo-container/folder</ContentType>
            </Content>
        </Links>
    </Item>
    #else
    <Item>
        <Details>
            <Title>#echo '.'.join(file.split('.')[:-1]) #</Title>
            <ContentType>audio/*</ContentType>
            <SourceFormat>audio/mpeg</SourceFormat>
        </Details>
        <Links>
            <Content>
                <ContentType>audio/*</ContentType>
                    <AcceptsParams>No</AcceptsParams>
                    <Url>/$quote($name)/$quote($file)</Url>
                </Content>
        </Links>
    </Item>
    #end if
    #end for
</TiVoContainer>

