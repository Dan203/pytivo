<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
  <meta content="text/html; charset=ISO-8859-1" http-equiv="content-type">
  <title>pyTivo - TiVo ToGo</title>
</head>
<body>
<table align=center style="text-align: left;" border="1" cellpadding="2" cellspacing="2">
  <tbody>
    <tr>
      <td style="height: 48px; width: 483px;">
      <select name="tivoList">
      <option selected="selected">My Tivo</option>
      <option>Your TiVo</option>
      </select>
	  &nbsp;<input value="View Now Playing List" name="NPL" type="button"> &nbsp;</td>
    </tr>
    <tr>
      <td>
      <table>
      #set $i = 0
      #for $row in $data
		  #set $i += 1
		  #if $i%2
		  	<tr style="background-color: rgb(250, 250, 250);">
		  #else
		  	<tr>
		  #end if
		  #if $row['ContentType'] == 'x-tivo-container/folder'
			<td width=8></td>
			<td><a href='/TiVoConnect?Command=NPL&Container=$(container)&Folder=$(row["UniqueId"])'>$row['Title'] </a></td>
			<td></td><td></td>
		  #else
			#if 'Icon' in $row
				#if $row['Icon'] == 'urn:tivo:image:expires-soon-recording'
					<td width=8 bgcolor='yellow'> </td>
				#else if $row['Icon'] == 'urn:tivo:image:expired-recording'
					<td width=8 bgcolor='yellow'><b> ! </b></td>
				#else if $row['Icon'] == 'urn:tivo:image:save-until-i-delete-recording'
					<td width=8 bgcolor='green'></td>				
				#else
					<td width=8></td>
				#end if
			#else
				<td width=4></td>
			#end if
			<td width=500>
				<b>$row['Title']: $row['EpisodeTitle']</b><br>
				$row['Description']  
				$row['SourceChannel'] $row['SourceStation']
			</td>
			<td>$row['SourceSize'] <br>
			$row['Duration']
			</td>
			<td>$row['CaptureDate']</td>
		  #end if
		  </tr>
      #end for
      </table>
      </td>
    </tr>
  </tbody>
</table>
</body>
</html>
